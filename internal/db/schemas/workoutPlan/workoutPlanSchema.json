{
  "$jsonSchema": {
    "bsonType": "object",
    "required": ["duration", "weeks"],
    "properties": {
      "_id": {
        "bsonType": "objectId",
        "description": "must be an objectId and is required"
      },
      "duration": {
        "bsonType": "int",
        "description": "duration of the workout plan in weeks and is required"
      },
      "weeks": {
        "bsonType": "array",
        "items": {
          "bsonType": "object",
          "required": ["days", "weekNumber"],
          "properties": {
            "weekNumber": {
              "bsonType": "int"
            },
            "days": {
              "bsonType": "array",
              "items": {
                "bsonType": "object",
                "required": [
                  "warmUp",
                  "workout",
                  "coolDown",
                  "totalExercises",
                  "totalLaps",
                  "workoutTimeRange",
                  "equipment",
                  "completionStatus"
                ],
                "properties": {
                  "warmUp": {
                    "bsonType": "array",
                    "items": {
                      "bsonType": "object",
                      "required": ["exerciseIds", "proposedLaps"],
                      "properties": {
                        "exerciseIds": {
                          "bsonType": "array",
                          "items": {
                            "bsonType": "objectId"
                          }
                        },
                        "restTime": {
                          "bsonType": "int"
                        },
                        "proposedLaps": {
                          "bsonType": "int"
                        },
                        "actualLaps": {
                          "bsonType": "int"
                        },
                        "completed": {
                          "bsonType": "bool"
                        }
                      }
                    }
                  },
                  "workout": {
                    "bsonType": "array",
                    "items": {
                      "bsonType": "object",
                      "required": ["exerciseIds", "proposedLaps"],
                      "properties": {
                        "exerciseIds": {
                          "bsonType": "array",
                          "items": {
                            "bsonType": "objectId"
                          }
                        },
                        "restTime": {
                          "bsonType": "int"
                        },
                        "proposedLaps": {
                          "bsonType": "int"
                        },
                        "actualLaps": {
                          "bsonType": "int"
                        },
                        "completed": {
                          "bsonType": "bool"
                        }
                      }
                    }
                  },
                  "coolDown": {
                    "bsonType": "array",
                    "items": {
                      "bsonType": "object",
                      "required": ["exerciseIds", "proposedLaps"],
                      "properties": {
                        "exerciseIds": {
                          "bsonType": "array",
                          "items": {
                            "bsonType": "objectId"
                          }
                        },
                        "restTime": {
                          "bsonType": "int"
                        },
                        "proposedLaps": {
                          "bsonType": "int"
                        },
                        "actualLaps": {
                          "bsonType": "int"
                        },
                        "completed": {
                          "bsonType": "bool"
                        }
                      }
                    }
                  },
                  "totalExercises": {
                    "bsonType": "int"
                  },
                  "totalLaps": {
                    "bsonType": "int"
                  },
                  "workoutTimeRange": {
                    "bsonType": "array",
                    "items": {
                      "bsonType": "int"
                    },
                    "minItems": 2,
                    "maxItems": 2
                  },
                  "equipment": {
                    "bsonType": "array",
                    "items": {
                      "bsonType": "string"
                    }
                  },
                  "completionStatus": {
                    "bsonType": "bool"
                  }
                }
              }
            },
            "completedDays": {
              "bsonType": "int"
            }
          }
        }
      }
    }
  }
}
