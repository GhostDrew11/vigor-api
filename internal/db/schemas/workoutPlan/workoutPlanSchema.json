{
  "definitions": {
    "circuit": {
      "bsonType": "object",
      "required": ["exerciseIds", "proposedLaps"],
      "properties": {
        "exerciseIds": {
          "bsonType": "array",
          "items": { "bsonType": "objectId" }
        },
        "restTime": { "bsonType": "int" },
        "proposedLaps": { "bsonType": "int" },
        "actualLaps": { "bsonType": "int" },
        "completed": { "bsonType": "bool" }
      }
    }
  },
  "$jsonSchema": {
    "title": "WorkoutPlan",
    "description": "Schema for a generic workout plan template.",
    "bsonType": "object",
    "required": ["duration", "weeks"],
    "properties": {
      "_id": {
        "bsonType": "objectId",
        "description": "must be an objectId"
      },
      "duration": {
        "bsonType": "int",
        "description": "duration of the workout plan in weeks and is required"
      },
      "weeks": {
        "bsonType": "array",
        "items": {
          "bsonType": "object",
          "required": ["days", "weekNumber"],
          "properties": {
            "days": {
              "bsonType": "array",
              "items": {
                "bsonType": "object",
                "required": ["warmUp", "workout", "coolDown"],
                "properties": {
                  "warmUp": {
                    "bsonType": "array",
                    "items": { "$ref": "#/definitions/circuit" }
                  },
                  "workout": {
                    "bsonType": "array",
                    "items": { "$ref": "#/definitions/circuit" }
                  },
                  "coolDown": {
                    "bsonType": "array",
                    "items": { "$ref": "#/definitions/circuit" }
                  },
                  "totalExercises": { "bsonType": "int" },
                  "totalLaps": { "bsonType": "int" },
                  "workoutTimeRange": {
                    "bsonType": "array",
                    "items": { "bsonType": "int" },
                    "minItems": 2,
                    "maxItems": 2
                  },
                  "equipment": {
                    "bsonType": "array",
                    "items": { "bsonType": "string" }
                  },
                  "completionStatus": { "bsonType": "bool" }
                }
              }
            },
            "weekNumber": { "bsonType": "int" },
            "completedDays": { "bsonType": "int" }
          }
        }
      }
    }
  }
}
