          },
          "protein": {
            "bsonType": "double"
          },
          "fat": {
            "bsonType": "double"
          },
          "saturatedFat": {
            "bsonType": "double"
          },
          "carbohydrates": {
            "bsonType": "double"
          },
          "sugars": {
            "bsonType": "double"
          },
          "fiber": {
            "bsonType": "double"
          }
        }
      },
